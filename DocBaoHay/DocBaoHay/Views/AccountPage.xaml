<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocBaoHay.Views.AccountPage"
             Title="Tài khoản">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="Center" Padding="20" x:Name="NotSignedInSL">
                <Label Text="Bạn đã có tài khoản?" FontSize="15"></Label>
                <Button x:Name="LoginBtn" Text="Đăng nhập" Padding="10" BackgroundColor="Tomato" TextColor="White" Clicked="LoginBtn_Clicked" CornerRadius="30" Margin="0,0,0,10"></Button>
                <Label Text="Bạn chưa có tài khoản?" FontSize="15"></Label>
                <Button x:Name="SignUpBtn" Text="Đăng ký" Padding="10" TextColor="Tomato" BackgroundColor="White" Clicked="SignUpBtn_Clicked" CornerRadius="30" BorderColor="Tomato" BorderWidth="2"></Button>
            </StackLayout>
            <StackLayout VerticalOptions="Center" Padding="20"  x:Name="SignedInSL">
                <Grid WidthRequest="300" BackgroundColor="Beige" Padding="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Frame CornerRadius="50" Grid.Row="0" Grid.Column="0">
                        <Image x:Name="UserImg" HorizontalOptions="Start" Aspect="AspectFill"></Image>
                    </Frame>
                    <StackLayout Grid.Row="0" Grid.Column="1" Margin="16,0,0,0">
                        <Label x:Name="UserUsername" Text="" FontSize="17"></Label>
                        <Label x:Name="UserFullname" Text="" FontSize="17"></Label>
                    </StackLayout>
                </Grid>
                <StackLayout Margin="0,16,0,0">
                    <Button x:Name="SavedBtn" Text="Đã lưu" Clicked="SavedBtn_Clicked"></Button>
                    <Button x:Name="FollowedBtn" Text="Đang theo dõi" Clicked="FollowedBtn_Clicked"></Button>
                    <Button x:Name="RecentBtn" Text="Đọc gần đây" Clicked="RecentBtn_Clicked"></Button>
                    <Button x:Name="UpdateInfoBtn" Text="Cập nhật tài khoản" Clicked="UpdateInfoBtn_Clicked"></Button>
                </StackLayout>
                <Button x:Name="LogOutBtn" Text="Đăng xuất" VerticalOptions="End"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
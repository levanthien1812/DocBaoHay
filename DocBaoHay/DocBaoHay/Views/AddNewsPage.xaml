<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocBaoHay.Views.AddNewsPage"
             Title="Thêm bài báo">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label FontFamily="RobotoSlab" Text="Thêm tin tức" FontSize="22" HorizontalOptions="Center"/>
            <Label FontFamily="RobotoSlab" Text="Tiêu đề" FontSize="18"></Label>
            <Entry FontFamily="RobotoSlab" x:Name="TieuDe" FontSize="18"></Entry>
            <Label FontFamily="RobotoSlab" Text="Hình thumbnail" FontSize="18"></Label>
            <Entry FontFamily="RobotoSlab" x:Name="Thumbnail" FontSize="18"></Entry>
            <Label FontFamily="RobotoSlab" Text="Mô tả" FontSize="18"></Label>
            <Entry FontFamily="RobotoSlab" x:Name="MoTa" FontSize="18"></Entry>
            <Label FontFamily="RobotoSlab" Text="Tác giả" FontSize="18"></Label>
            <Picker x:Name="TacGiaPicker" FontSize="18"></Picker>
            <Label FontFamily="RobotoSlab" Text="Chủ đề" FontSize="18"></Label>
            <Picker x:Name="ChuDePicker" FontSize="18"></Picker>
            <Button FontFamily="RobotoSlab" x:Name="AddContentBtn" Text="Thêm nội dung bài báo" Clicked="AddContentBtn_Clicked" FontSize="18"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
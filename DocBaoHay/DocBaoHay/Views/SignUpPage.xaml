<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocBaoHay.Views.SignUpPage"
             Title="Đăng ký">
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="Center">
            <Label Text="Đăng ký" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="25" TextTransform="Uppercase"/>
            <Entry Placeholder="Họ và tên" FontSize="17" x:Name="HoTenEntry" Margin="0,10,0,0"></Entry>
            <Entry Placeholder="Tên đăng nhập" FontSize="17" x:Name="TenDangNhapEntry" Margin="0,10,0,0"></Entry>
            <Entry Placeholder="Email" FontSize="17" x:Name="EmailEntry" Margin="0,10,0,0"></Entry>
            <Entry Placeholder="Mật khẩu" IsPassword="True" FontSize="17" x:Name="MatKhauEntry" Margin="0,10,0,0"></Entry>
            <Entry Placeholder="Xác nhận mật khẩu" IsPassword="True" FontSize="17" x:Name="MatKhauXacNhanEntry" Margin="0,10,0,0"></Entry>
            <Button x:Name="SignUpBtn" Text="Đăng ký" Padding="10" BackgroundColor="Tomato" TextColor="White" Clicked="SignUpBtn_Clicked" CornerRadius="30" Margin="0,20,0,0" FontSize="17" TextTransform="Uppercase"></Button>
            <Label x:Name="resultLbl"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
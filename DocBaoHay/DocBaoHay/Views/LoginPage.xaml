<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocBaoHay.Views.LoginPage"
             Title="Đăng nhập">
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="Center">
            <Image Source="DocBaoHayLogo.jpg" WidthRequest="120" Margin="0,0,0,10"></Image>
            <Label Text="Đăng nhập" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="25" TextTransform="Uppercase"/>
            <Entry Placeholder="Email" FontSize="17" x:Name="EmailEntry" Margin="0,10,0,0"></Entry>
            <Entry Placeholder="Mật khẩu" IsPassword="True" FontSize="17" x:Name="MatKhauEntry" Margin="0,10,0,0"></Entry>
            <Button x:Name="LoginBtn" Text="Đăng nhập" Padding="10" BackgroundColor="Tomato" TextColor="White" Clicked="LoginBtn_Clicked" CornerRadius="30" Margin="0,20,0,0" FontSize="17" TextTransform="Uppercase"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>